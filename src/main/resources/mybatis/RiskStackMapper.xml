<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chinacloud.isv.persistance.RiskStackDao">
    <select id="getRisks" resultType="com.chinacloud.isv.domain.RiskStack">
        select * from RiskStack where 1=1 limit 10 
    </select>
    <insert id="addRisk" parameterType="com.chinacloud.isv.domain.RiskStack">
        insert into RiskStack(id,requestUrl,requestMethod,params,callBackUrl,addTime) 
        values(#{id},#{requestUrl},#{requestMethod},#{params},#{callBackUrl},now())
    </insert>
    <delete id="deleteRisk" parameterType="String">
        delete from RiskStack where id=#{id} 
    </delete>
        
</mapper>